function [p0,c,S,L] = test_all_emo(K,ext,rnn)

if strcmp(ext, 'mfcc')
    tam = 36;
    
elseif strcmp(ext, 'f0')
    tam = 8;
    
elseif strcmp(ext, 'lpcc')
    tam = 15;
end

c = zeros(K,tam);
S = zeros(K,tam);
p0 = zeros(1,K);
L = zeros(1,10);

emos = ['W';'T'];

for emo = 1:length(emos)
    
    % locutor, emoção, Metade (para treino), VAD-RNN, Extrator: 'mfcc' ou 'f0'.
    y = get_emo_feats(emos(emo),rnn,ext);     
    
    [p0n,cn,Sn,Ln] = gmm_em_2(y', K, 10, 0);
    
    p0 = cat(1,p0,p0n');
    L = cat(1,L,Ln);
    c = cat(3,c,cn);
    S = cat(3,S,Sn);
end

% Modelos GMM para cada orador.
c = c(:,:,2:end);
S = S(:,:,2:end);
p0 = p0(2:end,:);
L = L(2:end,:);

